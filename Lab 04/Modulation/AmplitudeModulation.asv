t = -1:0.01:1;

a = 5;
f = 3;
y = a*sin(2*pi*f*t);

subplot(3,1,1)
plot(t, y, '-red')
hold on
plot(t, zeros(size(t)), '-black') 
title('Lab4/Aviskar Poudel/SineMessageSignal')
legend('Sine Wave')

hf = 50;
carrier = a*sin(2*pi*hf*t);

subplot(3,1,2)
plot(t, carrier, '-red')  
hold on
plot(t, zeros(size(t)), '-black') 
title('Lab4/Aviskar Poudel/CarrierSignal')
legend('Carrier Wave')


am_signal = (1 + y) .* carrier;   % standard AM modulation


